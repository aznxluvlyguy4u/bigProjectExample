{% extends 'base.html.twig' %}

{% block body %}
    {% for letter in letters %}
    <div id="page">
        <div class="header">
            <div class="nsfo-logo">
                {#<img src="http://www.hetschaap.nl/wp-content/uploads/2012/12/nsfo-organiseert-symposium-2511.jpg">#}
                <img src="{{ absolute_url(asset('assets/images/nsfo-logo.png')) }}">
            </div>

            <div class="return-address">
                NSFO <br/>
                Postbus 160<br/>
                5300 AD Zaltbommel <br/>
                Nederland <br/>
            </div>
        </div>

        <div class="addressee">
            {{ letter.addressee.company_name }} <br/>
            {{ letter.addressee.street_name }} {{ letter.addressee.address_number }} {{ letter.addressee.address_number_suffix }} <br/>
            {{ letter.addressee.postal_code }} <br/>
            {{ letter.addressee.state }} <br/>
        </div>

        <div class="date">Gelderland, {{ now }}</div>


        <div class="content">
            {{ letter.letter_template.html | raw }}
        </div>
    </div>
    {% endfor %}

    <style>
        html{
            height: 0;
        }

        body {
            font-family: Verdana;
            font-size: 12px;
        }

        #page {
            overflow: hidden;
            page-break-after: always;
        }

        .header {
            display: block;
            width: 100%;
            text-align: right;
        }

        .nsfo-logo {
            display: inline-block;
            float: left;
        }

        .nsfo-logo img {
            display: inline-block;
            height: auto;
            width: 350px;
        }

        .return-address {
            display: inline-block;
            font-size: 9px;
            font-weight: 700;
            padding-bottom: 0.6rem;
        }

        .addressee {
            display: block;
            margin-top: 8rem;
        }

        .date {
            margin: 5rem 0
        }

        .content p {
            line-height: 1.2em !important;
            margin: 0;
            padding: 0;
        }
    </style>
{% endblock %}

