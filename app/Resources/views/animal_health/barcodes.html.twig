{% extends 'base.html.twig' %}

{% block body %}

    {% for i in 0..(barcodes|length - 1) %}
        {% if i % 2 == 0 %}
        <table style="font-family: Sans-Serif;">
            <tr>
                <td style="font-size: 0.7rem; padding: 0.5rem 0 0 1rem; width: 200px; font-weight: 900">
                    {{ barcodes[i]['uln_country_code'] }} {{ barcodes[i]['uln_number_1'] }} <span style="font-size: 0.8rem;">{{ barcodes[i]['uln_number_2'] }}</span>
                    {{ barcodes[i]['barcode'] | raw }}
                </td>
                {% if barcodes[i+1] is defined %}
                <td style="font-size: 0.7rem; padding: 0.5rem 0 0 2rem; width: 200px; font-weight: 900">
                    {{ barcodes[i+1]['uln_country_code'] }} {{ barcodes[i+1]['uln_number_1'] }} <span style="font-size: 0.8rem;">{{ barcodes[i+1]['uln_number_2'] }}</span>
                    {{ barcodes[i+1]['barcode'] | raw }}
                </td>
                {% endif %}
            </tr>
        </table>
        <br>
        {% endif %}

        {% if i % 2 == 1 and loop.last %}
        <table style="font-family: Sans-Serif;">
            <tr>
                <td style="font-size: 0.7rem; padding: 0.5rem 0 0 1rem; width: 200px; font-weight: 900">
                    {{ barcodes[i]['uln_country_code'] }} {{ barcodes[i]['uln_number_1'] }} <span style="font-size: 0.8rem;">{{ barcodes[i]['uln_number_2'] }}</span>
                    {{ barcodes[i]['barcode'] | raw }}
                </td>
            </tr>
        </table>
        {% endif %}
    {% endfor %}
{% endblock %}