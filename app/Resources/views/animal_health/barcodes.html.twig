{% extends 'base.html.twig' %}

{% block body %}

    {% for i in 0..(barcodes|length - 1) %}
        {% if i % 2 == 0 %}
        <table style="font-family: Sans-Serif;">
            <tr>
                <td style="font-size: 10px; padding: 6px 0 0 15px; width: 200px; font-weight: 900">
                    {{ barcodes[i]['uln_country_code'] }} {{ barcodes[i]['uln_number_1'] }} <span style="font-size: 13px;">{{ barcodes[i]['uln_number_2'] }}</span>
                    {{ barcodes[i]['barcode'] | raw }}
                </td>
                <td style="font-size: 10px; padding: 6px 0 0 35px; width: 200px; font-weight: 900">
                    {{ barcodes[i+1]['uln_country_code'] }} {{ barcodes[i+1]['uln_number_1'] }} <span style="font-size: 13px;">{{ barcodes[i+1]['uln_number_2'] }}</span>
                    {{ barcodes[i+1]['barcode'] | raw }}
                </td>
            </tr>
        </table>
        <br>
        {% endif %}

        {% if i % 2 == 1 and loop.last %}
        <table style="font-family: Sans-Serif;">
            <tr>
                <td style="font-size: 10px; padding: 6px 0 0 15px; width: 200px; font-weight: 900">
                    {{ barcodes[i]['uln_country_code'] }} {{ barcodes[i]['uln_number_1'] }} <span style="font-size: 13px;">{{ barcodes[i]['uln_number_2'] }}</span>
                    {{ barcodes[i]['barcode'] | raw }}
                </td>
            </tr>
        </table>
        {% endif %}
    {% endfor %}
{% endblock %}