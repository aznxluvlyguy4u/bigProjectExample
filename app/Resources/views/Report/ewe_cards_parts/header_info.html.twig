{# HEADER INFO #}
<div class="row border-bottom-1">
    <div class="col-xs-3 col-xs-offset-9">
        <img class="img-responsive"  src="{{ logoPath }}" alt="">
    </div>

    <div class="col-xs-4">
        <div class="row">
            <div class="col-xs-12">{{ vars.userData.fullName }}</div>
        </div>

        <div class="row">
            <div class="col-xs-12">{{ vars.userData.locationAddress }}</div>
        </div>

        <div class="row">
            <div class="col-xs-3">{{ vars.userData.locationPostalCode }}</div>
            <div class="col-xs-9">{{ vars.userData.locationCity }}</div>
        </div>
    </div>

    <div class="col-xs-8">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-2" style="margin-left: 125px">Ooikaart</div>
        </div>
        <div class="row mt-2">
            {% if animal.animalAndProduction.collar is empty %}
                <h1 class="my-0" style="margin-left: 135px"><b>{{ animal.animalAndProduction.animal_order_number }}</b></h1>
            {% else %}
                <h1 class="my-0" style="margin-left: 90px"><b>{{ animal.animalAndProduction.animal_order_number ~ ' ' ~ animal.animalAndProduction.collar }}</b></h1>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-xs-11 col-xs-offset-1"
                style="margin-left: 95px">{{ animal.animalAndProduction.uln_numeric_country_code ~ animal.animalAndProduction.uln_number }}</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-7">
        {{ vars.userData.ubn }} {{ vars.userData.fullName }}, {{ vars.userData.locationAddress }}, {{ vars.userData.locationPostalCode }}, {{ vars.userData.locationCity }}
    </div>
    <div class="col-xs-3 text-right">
        {{ 'Datum: '~("now"|date("d-m-Y")) }}
    </div>
    <div class="col-xs-2 text-right">
        {{ 'Pagina '~ pageNumber }}
    </div>
</div>
