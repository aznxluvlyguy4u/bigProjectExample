{# TREATMENT INFO #}
<div class="row">

    <div class="col-xs-12 p-2 bordered {{ showBorderTop ? '' : 'border-top-0' }}">
        {# TITLE #}
        <div class="row">
            <div class="col-xs-12 py-1">
                <h2 class="display-inline"><ins><b>Behandelingsgegevens</b></ins></h2>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">

                        {# JUST TO GENERATE FIRST THEAD WITH PHONY TBODY #}
                        <table class="w-100 border-0 px-0 py-0 mb-1">
                            <thead>

                                <tr>
                                    <td>Datum</td>
                                    <td>Categorie</td>
                                    <td>Subcategorie</td>
                                    <td>Behandeling</td>
                                    <td>Opmerking</td>
                                    <td>Kosten</td>
                                </tr>
                            </thead>

                            <tbody>
                                {% for treatment in animal.treatments|slice(offset, limit) %}

                                    <tr class="height-0 text-nowrap">
                                        <td>{{ treatment.treatment_date }}</td>
                                        <td>{{ treatment.category }}</td>
                                        <td>{{ treatment.sub_category }}</td>
                                        <td>{{ treatment.treatment }}</td>
                                        <td>{{ treatment.comment }}</td>
                                        <td>{{ treatment.costs }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xs-12 p-2 bordered border-top-0">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">

                        {# HIDDEN THEAD WITH REAL TBODY #}
                        <table class="w-100 border-0 px-0 py-0 mb-1">
                            <thead>
                                <tr class="height-0">
                                    <td>Datum</td>
                                    <td>Categorie</td>
                                    <td>Subcategorie</td>
                                    <td>Behandeling</td>
                                    <td>Opmerking</td>
                                    <td>Kosten</td>
                                </tr>
                            </thead>

                            <tbody>

                                {% for treatment in animal.treatments|slice(offset, limit) %}

                                    <tr class="text-nowrap">
                                        <td>{{ treatment.treatment_date }}</td>
                                        <td>{{ treatment.category }}</td>
                                        <td>{{ treatment.sub_category }}</td>
                                        <td>{{ treatment.treatment }}</td>
                                        <td>{{ treatment.comment }}</td>
                                        <td>{{ treatment.costs }}</td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
