<div class="row" style="position: relative">
    <div class="ontop-4"></div>
    <div class="col-xs-12 bg-green rounded-top">
        <h2 class="display-inline"><b>{{ title | raw }}</b></h2><h4 class="display-inline">{% if not animal.section_type is empty %}{{ ' - '~animal.section_type }}{% endif %}</h4>
    </div>
</div>
<div class="row mb-4">
    <div class="col-xs-12 bordered rounded-bottom">
        <div class="px-2 py-1">
            <div class="row mb-1">
                <div class="col-xs-6">
                    <div class="pr-1">
                        <div class="row bg-white-stripe">
                            <div class="col-xs-5 fieldName text-nowrap">Uniek levensnr.</div>
                            <div class="col-xs-7 fieldValue text-nowrap">{{ animal.uln }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="pl-1">
                        <div class="row bg-white-stripe">
                            <div class="col-xs-5 fieldName text-nowrap">Stamboeknr.</div>
                            <div class="col-xs-7 fieldValue text-nowrap">{{ animal.pedigree }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-xs-6">
                    <div class="pr-1">
                        <div class="row bg-white-stripe">
                            <div class="col-xs-5 fieldName text-nowrap">Geboren als</div>
                            <div class="col-xs-7 fieldValue text-nowrap">{{ animal.nLing }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="pl-1">
                        <div class="row bg-white-stripe">
                            <div class="col-xs-5 fieldName text-nowrap">Productie</div>
                            <div class="col-xs-7 fieldValue text-nowrap">{{ animal.production }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>